    "ethereum-waffle": "^4.0.10",
    "ethers": "5.7.0",
    "hardhat": "^2.12.7"
  },
  "scripts": {
    "test": "yarn hardhat test",
    "start": "yarn hardhat node",
    "deploy": "yarn hardhat run scripts/deploy.js",
    "compile": "yarn hardhat compile"
  },
  "repository": {
    "type": "git",
